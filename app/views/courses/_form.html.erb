<div class="row">
  <div class="input-field col s6">
    <input id="code" name="course[code_id]" type="text" class="validate" value="<%= course.code_id %>">
    <label for="code" class="active">Code</label>
  </div>
  <div class="input-field col s6">
    <input id="name" name="course[name]" type="text" class="validate" value="<%= course.name %>">
    <label for="name" class="active">Name</label>
  </div>
</div>

<div class="row">
  <div class="input-field col s6">
    <input id="credit" name="course[credit]" type="number" class="validate" required value="<%= course.credit %>">
    <label for="credit" class="active">Credit</label>
  </div>
</div>
